        body {
  margin: 0;
  padding: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #f2f2f2;
}

.login-container {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0px 0px 10px #c2c2c2;
  width: 80%;
  max-width: 500px;
  margin: 100px auto;
  padding: 50px;
}

.login-title {
  text-align: center;
  font-size: 36px;
  margin-bottom: 30px;
  color: #333;
}

.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
  width: 100%;
}

label {
  font-size: 18px;
  margin-bottom: 10px;
  color: #333;
}

input[type="email"],
input[type="password"] {
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  width: 100%;
  font-size: 16px;
}




.login-btn {
  background-color: rgb(156,131,196);
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px;
  font-size: 18px;
  width: 100%;
  cursor: pointer;
  transition: background-color 0.2s ease-in-out;
}

.login-btn:hover {
  background-color: #0062cc;
}

.signup-link {
  text-align: center;
  margin-top: 20px;
  font-size: 16px;
}

.signup-link a {
  color: #007bff;
  text-decoration: none;
  transition: color 0.2s ease-in-out;
}

.signup-link a:hover {
  color: #0056b3;
}

